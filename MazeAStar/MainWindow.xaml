<Window x:Class="MazeAStar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MazeAStar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <DockPanel>

        <StackPanel Orientation="Vertical" DockPanel.Dock="Top">
            <TextBlock Text="Filas"></TextBlock>
            <TextBox x:Name="txtFilas" Text="30"></TextBox>
            <TextBlock Text="Columnas"></TextBlock>
            <TextBox x:Name="txtColumnas" Text="30"></TextBox>
            <TextBlock Text="Obstaculos"></TextBlock>
            <TextBox x:Name="txtObstaculos" Text="90"></TextBox>
            <Button Content="Generar" x:Name="btnGenerar" Click="btnGenerar_Click"></Button>
        </StackPanel>

        <UniformGrid x:Name="tablero">
            
        </UniformGrid>
    </DockPanel>
</Window>
